@{
    ViewBag.Title = "AppicantRegistration";
    Layout = "~/Views/Shared/_LoginLayOut.cshtml";
}
<link href="~/CSS/agent_registration.css" rel="stylesheet" type="text/css" />
<script src="~/Scripts/UIScripts/Common/jquery-1.4.2.min.js"></script>
<script src="~/Scripts/UIScripts/Home/jquery.js"></script>
<script src="@Url.Content("~/Scripts/knockout-3.0.0.debug.js")" type="text/javascript"></script>

<section>
    
    <article data-bind="with: applicant">

        <h3>Agent Registration</h3>
        <fieldset>
            <legend>Port of Operations</legend>
            <span class="allports">
                <input type="checkbox" onclick="toggle(this)" />Select all ports below</span>
            <div class="portslist">
                <input type="checkbox" name="port" value="1" /><label>Richards Bay</label>

            </div>

        </fieldset>
        <fieldset>
            <legend>Applicant Details</legend>
            <ul class="d3">
                <li>
                    <label>Registered Name:</label><input data-bind="value: ApplicantName" name="" type="text" required></li>
                <li>
                    <label>Income Tax No:</label><input data-bind="value: IncTaxNo" name="" type="text"></li>
            </ul>
            <ul class="d3">
                <li>
                    <label>Trading Name:</label><input data-bind="value: ApplicantTradName" name="" type="text"></li>
                <li>
                    <label>Vat No:</label><input data-bind="value: VatNo" name="" type="text"></li>
            </ul>
            <ul class="d3">
                <li>
                    <label>Registration No:</label><input data-bind="value: RegnNo" name="" type="text"></li>
                <li>
                    <label>Levy No:</label><input data-bind="value: SkilDevLevyNo" name="" type="text"></li>
            </ul>
            <div class="addr">
                <fieldset>
                    <legend>Principal place of Business</legend>
                   
                    <input name="" type="text" data-bind="value: SarsTaxCleaCert">
                    <ul data-bind="foreach: Applicants_Address">
                        <!-- ko if: AddrType == 1 -->
                        <li>
                            
                            <label>Number & Street:</label><span><input name="" type="text" data-bind="value: NumStreet"></span></li>
                        <li>
                            <label>Suburb:</label><span><input name="" type="text" data-bind="value: Suburb"></span></li>
                        <li>
                            <label>Town & City:</label><span><input name="" type="text" data-bind="value: TownCity"></span></li>
                        <li>
                            <label>Postal Code:</label><input name="" type="text" data-bind="value: PostalCode"></li>
                        <li>
                            <label>Telephone No.:</label><input name="" type="text" data-bind="value: Telephone1">
                            Add More</li>
                        <li>
                            <label>Fax No.:</label><input name="" type="text" data-bind="value: FaxNo"></li>
                        <!-- /ko -->
                    </ul>
                </fieldset>
            </div>
            <div class="addr">
                <fieldset>
                    <legend>Postal Address</legend>

                    <ul data-bind="foreach: Applicants_Address">
                        <!-- ko if: AddrType == 2 -->
                        <li>
                            <label>Number & Street:</label><span><input name="" type="text" data-bind="value: NumStreet"></span></li>
                        <li>
                            <label>Suburb:</label><span><input name="" type="text" data-bind="value: Suburb"></span></li>
                        <li>
                            <label>Town & City:</label><span><input name="" type="text" data-bind="value: TownCity"></span></li>
                        <li>
                            <label>Postal Code:</label><input name="" type="text" data-bind="value: PostalCode"></li>
                        <!-- /ko -->
                    </ul>
                </fieldset>
            </div>
            <div class="addr">
                <fieldset>
                    <legend>Authorized contact person details</legend>
                    <ul data-bind="foreach: Appl_Auth_Cont_Pers_Det">
                        <li>
                            <label>First Name:</label><input name="" type="text" data-bind="value: FirstName"></li>
                        <li>
                            <label>Surname:</label><input name="" type="text" data-bind="value: LastName"></li>
                        <li>
                            <label>Identity No:</label><input name="" type="text" data-bind="value: IdentityNo"></li>
                        <li>
                            <label>Designation:</label><input name="" type="text" data-bind="value: Designation"></li>
                        <li>
                            <label>Cellular No.:</label><input name="" type="text" data-bind="value: CellularNo"></li>
                        <li>
                            <label>Email Address:</label><input name="" type="email" placeholder="abc@example.com" data-bind="value: EmailAddress" required>
                            <span class="form_hint">Proper format "name@something.com"</span></li>
                    </ul>
                </fieldset>
            </div>
            <div class="addr">
                <fieldset>
                    <legend>Membership</legend>
                    <div class="memb">
                        <span>SARS Tax Clearance Certified?</span>

                        <input type="radio" name="1" data-bind="checked: SarsTaxCleaCert == 'Y' ? true : false" />Yes &nbsp;
                <input type="radio" name="1" data-bind="checked: SarsTaxCleaCert == 'Y' ? true : false" />No
                        <br>
                        <span>Are you a member of SAASOA?</span>
                        <input type="radio" name="2" />Yes &nbsp;
                <input type="radio" name="2" />No
                    </div>
                </fieldset>
            </div>
            <div class="bbbe">
                <fieldset>
                    <legend>BBBE Empowerment</legend>
                    <div class="memb">
                        <span>Do you qualify as micro-enterprise exempt in terms of BBBEE codes of good practice?</span>
                        <input type="radio" name="3" />Yes &nbsp;
                <input type="radio" name="3" />No
                        <br>
                        <span>BBBEE Status in terms of BBBEE codes of good practice?</span>
                        <input type="number" name="quantity" min="0" max="9">
                        &nbsp;Contribution
            	<span>Is your BBBEE status been verified by SANAS Accredited BEE verification agency?</span>
                        <input type="radio" name="5" />Yes &nbsp;
                <input type="radio" name="5" />No
                    </div>
                </fieldset>
                <div class="buttons">
                    <input type="submit" value="Save & Continue">
                    <input type="reset" value="Reset">
                    <input type="button" value="Cancel">
                </div>
            </div>
        </fieldset>
    </article>
    <script src="@Url.Content("~/Scripts/Application/AgentRegView.js")" type="text/javascript"></script>

</section>

