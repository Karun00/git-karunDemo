    <script src="@Url.Content("~/Scripts/Lib/bootstrap.touchspin.js")" type="text/javascript"></script>


    <script  src="@Url.Content("~/Scripts/Lib/select2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Lib/app.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/Lib/form-validation.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Lib/form-wizard.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Lib/form-components.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Lib/login-soft.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Lib/newsTicker.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Lib/toastr.js")" type="text/javascript"></script>
