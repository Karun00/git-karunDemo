    <script src="~/Scripts/Application/IpmsRoot.js"></script>
    <script src="~/Scripts/Application/Model/AccountLoginModel.js"></script>
    <script src="~/Scripts/Application/ViewModel/AccountLoginViewModel.js"></script>
    <style>
        .validationMessage {
            background: none repeat scroll 0% 0% #D45252;
            border-radius: 3px;
            color: #FFF;
            margin: -5px 0px 0px;
            font-size: 10px;
            padding: 0px 6px;
            z-index: 999;
            position: absolute;
        }

        .validationError {
            background: #d45252;
            border-radius: 3px 3px 3px 3px;
            color: white;
            margin: -5px 0 0 0px;
            font-size: 10px;
            padding: 0px 6px;
            z-index: 999;
            position: absolute;
            white-space: nowrap;
            left: auto;
        }

        .inputError {
            border: 1px solid #B94A48 !important;
            border-color: #B94A48;
        }

        .newsCss {
            height: auto;
            border: 0px solid #c3501d;
        }

        .rem {
            display: inline;
        }

        .shead {
            background-color: #35aa47;
            color: #000; /*text-align:center; */
            min-width: 150px;
            text-indent: 5px;
            padding: 3px;
            margin-bottom: 5px;
            display: block;
        }

        #newsData {
            width: 100%;
            display: inline-block;
            opacity: 1;
            filter: alpha(opacity=100);
        }

        .l {
            border: 0;
            float: right;
        }

        .r { /*margin-right:-21px;*/
            border: 0;
            float: right;
        }

        .navbar-fixed-top, .navbar-fixed-bottom {
            position: relative;
            right: 0;
            left: 0;
            z-index: 1030;
        }
    </style>

</head>

<body class="loginbg">
    <header>
        <img src="~/Content/Images/header.jpg" class="logo">
    </header>

    <script id="customMessageTemplate" type="text/html">
        <span class="validationError" data-bind='validationMessage: field'></span>
    </script>

    <section id="accountlogin">
        <article class="content">
            <div class="form-wizard" data-bind='validationOptions: { messageTemplate: "customMessageTemplate" }'>
                <form data-bind="with: accountModel">
                    <div class="loginbox">

                        <label>Username</label><span id="cusername" hidden="hidden">@ViewBag.UserName</span>

                        <input id="txtusername" class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Username" name="username" data-bind="value: username" />



                        <label>Password</label><span id="cpwd" hidden="hidden">@ViewBag.Password</span>

                        <input id="txtpwd" class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" name="password" data-bind="value: password" />



                        <button type="submit" class="btn green pull-right" id="btnLogin" data-bind="click: checkLogindet">
                            Login 
                        </button>
                        <span id="spanReturnUrl" hidden="hidden">@ViewBag.ReturnUrl</span>
                    </div>
                </form>

            </div>
        </article>
    </section>
    <script>
        IPMSROOT.rootPath = '@Url.Content("~")';
        $(function () {
            App.init();
            Login.init();
        });

        $(function () {
            var vm = new IPMSROOT.AccountLoginViewModel();
            ko.applyBindingsWithValidation(vm, $("#accountlogin")[0], { insertMessages: false, messagesOnModified: false, grouping: { deep: true } });

        });
    </script>
</body>
</html>
