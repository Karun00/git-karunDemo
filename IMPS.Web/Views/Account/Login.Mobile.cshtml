    <link href="@Url.Content("~/Content/Styles/default.css")" rel="stylesheet" type="text/css"/>
    <link href="@Url.Content("~/Content/Styles/toastr.css")" rel="stylesheet" type="text/css"/>

    <script src="@Url.Content("~/Scripts/Lib/jquery-2.0.3.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Lib/jquery-migrate-1.2.1.min.js")" type="text/javascript"></script>
